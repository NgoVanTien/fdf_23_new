<%= form_for [:admin, @category] do |f| %>
  <%= f.text_field :name, class: "form-control",
    placeholder: t("admin_form_category_name") %>
  <%= f.text_area :description, class: "form-control",
    placeholder: t("admin_form_category_description") %>
  <%= f.submit t("edit"), class: "button_submit button" %>
<% end %>
